{

"default": {
    "services": [
        "learning-switch",
        "rest-listener",
        "host-manager",
        "webui",
        "static-flow-pusher",
        "switch-stats",
        "stp",
        "arp-handler",
        "flow-manager",
        "rest-multipart",
        "rest-flowmod",
        "homework"
    ],

    "flow-manager" : {
        "interval" : 5
    },

    "rest-listener" : {
         "port" : 8000,
         "web-dir" : "./build/web"
    },

    "controller": {
         "nthreads": 1,
         "cbench": false,
         "pipeline": [
             "link-discovery", 
             "host-manager",
             "arp-handler",
             "homework",
             "forwarding"
         ]
    },

    "loader": {
        "threads": 2
    },

    "link-discovery": {
        "poll-interval": 10,
        "pin-to-thread": 1
    },

    "switch-manager": {
        "pin-to-thread": 1
    },

    "switch-stats": {
	"poll-interval": 1,
	"pin-to-thread": 1
    },

    "homework":{
        "switch_dpid": 8,
        "idle_timeout": 60,
        "servers": [
            {   
                "ip": "10.0.0.1",
                "max_flows": 5,
                "prob": 0.5
            },
            
            {
                "ip": "10.0.0.2",
                "max_flows": 5,
                "prob": 0.5
            },
            
            {   "ip": "10.0.0.3",
                "max_flows": 5,
                "prob": 0.0
            }
        ]
    }
}

}
